==> Integer ===> Long===>Decimal===>Double 


	Decimal salary=1000; //accepted 

	Integer salary=10000.00; // Not Accepted 


variables : 

	DataType variable[=value];
	
	Integer age;
	Decimal salary;
	String name;
	String city;
	String branch='SRNagar';
	Integer age=40;
	Decimal total=3400.00;

Non-Primitive : 
	DateType		variable
	Account 		acc ;
	Contact 		con;
	List<Account> 		accs;
	List<Integer> 		ages;
	Set<String> 		places;
	Map<Integer,String> 	accMap;
	Example 		emp;
	Integer[] 		ages;




